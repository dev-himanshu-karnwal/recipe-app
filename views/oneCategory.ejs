<h1 class="pb-4"><% if(locals.category) { %> <%= category %> Recipes<% } %></h1>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
    <li class="breadcrumb-item active" aria-current="page">
      <% if(locals.category) { %> <%= category %> <% } %>
    </li>
  </ol>
</nav>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4">
  <% if(locals.categoryById && locals.categoryById.length > 0) { %>
  <%categoryById.forEach(recipe => { %>
  <a href="/recipe/<%= recipe.id %>" class="col text-center category__link">
    <div class="category__img shadow">
      <img
        src="/uploads/<%= recipe.image %>"
        alt="<%= recipe.name %>"
        loading="lazy"
      />
    </div>
    <div class="pt-1"><%= recipe.name %></div>
  </a>
  <% }) %> <% } else { %>
  <br /><br />
  No <%= category %> recipes available at the moment.. <% } %>
</div>
